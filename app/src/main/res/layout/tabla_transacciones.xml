<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    tools:context=".Transacciones">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="383dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Transacciones"
                    android:lines="2"
                    android:gravity="center|center_horizontal"
                    android:textSize="31sp"
                    android:layout_marginLeft="0dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:id="@+id/tb_transacciones_volver"
                    android:onClick="OnclickVolver"
                    android:layout_marginLeft="98dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="top" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha  "
                    android:layout_weight="0.11" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha"
                    android:layout_weight="0.31" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nro boleta"
                    android:id="@+id/textView" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Nro_boleta"
                    android:layout_weight="0.38" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:id="@+id/textView2" />

                <EditText
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ID" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre  "
                    android:id="@+id/textView3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4"
                    android:layout_weight="1.04" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresos  "
                    android:id="@+id/textView4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText5"
                    android:layout_weight="1.00" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.41" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Filtrar"
                    android:id="@+id/button" />

            </LinearLayout>

            <TableLayout
                android:id="@+id/tabla"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TableRow
                    android:id="@+id/titulo"
                    android:textAlignment="textEnd"
                    android:background="#A3A09F"
                    android:baselineAligned="false">

                    <TextView
                        android:text="Fecha"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:text="Nro Boleta"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Identificación"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Info"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:text="Concepto"
                        android:textSize="9sp"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Bruto"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Comisión"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Neto"
                        android:textAlignment="center"
                        android:padding="5dp" />

                    <TextView
                        android:textSize="9sp"
                        android:text="Saldo Acumulado"
                        android:textAlignment="center"
                        android:padding="5dp" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</HorizontalScrollView>


